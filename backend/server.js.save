// ğŸ” Confirm server.js is running
console.log("ğŸ” server.js loaded and running...");

const express = require('express');
const cors = require('cors');
const http = require('http');
const { Server } = require('socket.io');
const fs = require('fs');
const path = require('path');
const { exec } = require('child_process');

const app = express();
app.use(cors());
app.use(express.json());

// âœ… Create HTTP server and attach socket.io to it
const server = http.createServer(app);
const io = new Server(server, {
  cors: {
    origin: "*", // Allow all origins for dev
    methods: ["GET", "POST"]
  }
});

// âœ… Health check endpoint
app.get('/', (req, res) => res.send('CodeOrbit Backend Running'));

// âœ… POST /execute to run code inside a Docker container
app.post('/execute', (req, res) => {
  const code = req.body.code;
  const filePath = path.join(__dirname, 'temp.js');

  // Write code to temp.js file
  fs.writeFileSync(filePath, code);

  // Run code in isolated Docker container
  exec(`docker run --rm -v ${filePath}:/app/temp.js node:18 node /app/temp.js`, (err, stdout, stderr) => {
    if (err || stderr) {
      console.error("ğŸš¨ Error during execution:", stderr || err.message);
      return res.json({ output: stderr || 'Execution error' });
    }
    console.log("âœ… Code executed successfully");
    return res.json({ output: stdout });
  });
});

// âœ… WebSocket: Handle real-time collaboration
io.on('connection', (socket) => {
  console.log("ğŸ§ª io.on('connection') triggered!");
  console.log("Client connected:", socket.id);

  // Receive code update from one client
  socket.on('codeUpdate', (newCode) => {
    console.log(`ğŸ“¥ Received codeUpdate from ${socket.id}:`);
    console.log(newCode);

    // Broadcast to all other connected clients
    socket.broadcast.emit('codeUpdate', newCode);
    console.log("ğŸ“¡ Broadcasted update to other clients.");
  });

  // Log disconnection
  socket.on('disconnect', () => {
    console.log("âŒ Client disconnected:", socket.id);
  });
});
